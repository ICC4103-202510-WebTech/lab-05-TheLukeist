<h1>Detalles del Usuario</h1>

<div class="card mb-3">
  <div class="card-body">
    <h5 class="card-title"><%= @user.first_name %> <%= @user.last_name %></h5>
    <p class="card-text">
      <strong>Email:</strong> <%= @user.email %><br>
      <strong>ID:</strong> <%= @user.id %><br>
      <strong>Creado:</strong> <%= @user.created_at %><br>
      <strong>Actualizado:</strong> <%= @user.updated_at %>
    </p>
    <div class="mb-3">
      <%= link_to "Editar", edit_user_path(@user), class: "btn btn-warning" %>
      <%= link_to "Volver a Usuarios", users_path, class: "btn btn-secondary" %>
    </div>
  </div>
</div>

<div class="row">
  <div class="col-md-6">
    <div class="card mb-3">
      <div class="card-header">
        <h5>Chats Enviados (<%= @sent_chats.count %>)</h5>
      </div>
      <div class="card-body">
        <% if @sent_chats.any? %>
          <table class="table table-striped">
            <thead>
              <tr>
                <th>ID</th>
                <th>Receptor</th>
                <th>Creado</th>
                <th>Acciones</th>
              </tr>
            </thead>
            <tbody>
              <% @sent_chats.each do |chat| %>
                <tr>
                  <td><%= chat.id %></td>
                  <td><%= chat.receiver.first_name %></td>
                  <td><%= chat.created_at %></td>
                  <td><%= link_to "Ver", chat_path(chat), class: "btn btn-primary btn-sm" %></td>
                </tr>
              <% end %>
            </tbody>
          </table>
        <% else %>
          <p>No hay chats enviados.</p>
        <% end %>
      </div>
    </div>
  </div>

  <div class="col-md-6">
    <div class="card mb-3">
      <div class="card-header">
        <h5>Chats Recibidos (<%= @received_chats.count %>)</h5>
      </div>
      <div class="card-body">
        <% if @received_chats.any? %>
          <table class="table table-striped">
            <thead>
              <tr>
                <th>ID</th>
                <th>Remitente</th>
                <th>Creado</th>
                <th>Acciones</th>
              </tr>
            </thead>
            <tbody>
              <% @received_chats.each do |chat| %>
                <tr>
                  <td><%= chat.id %></td>
                  <td><%= chat.sender.first_name %></td>
                  <td><%= chat.created_at %></td>
                  <td><%= link_to "Ver", chat_path(chat), class: "btn btn-primary btn-sm" %></td>
                </tr>
              <% end %>
            </tbody>
          </table>
        <% else %>
          <p>No hay chats recibidos.</p>
        <% end %>
      </div>
    </div>
  </div>
</div>

<div class="card mb-3">
  <div class="card-header">
    <h5>Mensajes Enviados (<%= @sent_messages.count %>)</h5>
  </div>
  <div class="card-body">
    <% if @sent_messages.any? %>
      <table class="table table-striped">
        <thead>
          <tr>
            <th>ID</th>
            <th>Chat</th>
            <th>Mensaje</th>
            <th>Creado</th>
            <th>Acciones</th>
          </tr>
        </thead>
        <tbody>
          <% @sent_messages.each do |message| %>
            <tr>
              <td><%= message.id %></td>
              <td>Chat #<%= message.chat_id %></td>
              <td><%= message.body %></td>
              <td><%= message.created_at %></td>
              <td>
                <%= link_to "Ver", message_path(message), class: "btn btn-primary btn-sm" %>
                <%= link_to "Editar", edit_message_path(message), class: "btn btn-warning btn-sm" %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    <% else %>
      <p>No hay mensajes enviados.</p>
    <% end %>
  </div>
</div> 