<h1>Usuarios</h1>

<div class="mb-3">
  <%= link_to "Nuevo Usuario", new_user_path, class: "btn btn-success" %>
</div>

<table class="table table-striped">
  <thead>
    <tr>
      <th>ID</th>
      <th>Nombre</th>
      <th>Apellido</th>
      <th>Email</th>
      <th>Mensajes Enviados</th>
      <th>Acciones</th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.id %></td>
        <td><%= user.first_name %></td>
        <td><%= user.last_name %></td>
        <td><%= user.email %></td>
        <td><%= user.sent_messages.count %></td>
        <td>
          <%= link_to "Ver", user_path(user), class: "btn btn-primary btn-sm" %>
          <%= link_to "Editar", edit_user_path(user), class: "btn btn-warning btn-sm" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table> 