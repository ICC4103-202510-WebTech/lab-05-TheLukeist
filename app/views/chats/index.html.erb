<h1>Chats</h1>

<% if can? :create, Chat %>
  <%= link_to "Nuevo Chat", new_chat_path, class: "btn btn-primary mb-3" %>
<% end %>

<div class="row">
  <% @chats.each do |chat| %>
    <div class="col-md-4 mb-4">
      <div class="card">
        <div class="card-body">
          <h5 class="card-title">Chat #<%= chat.id %></h5>
          <p class="card-text">
            <small class="text-muted">
              De: <%= chat.sender.first_name %> <%= chat.sender.last_name %><br>
              Para: <%= chat.receiver.first_name %> <%= chat.receiver.last_name %>
            </small>
          </p>
          <%= link_to "Ver", chat_path(chat), class: "btn btn-info" %>
          <% if can? :edit, chat %>
            <%= link_to "Editar", edit_chat_path(chat), class: "btn btn-warning" %>
          <% end %>
          <% if can? :destroy, chat %>
            <%= button_to "Eliminar", chat_path(chat), data: { turbo_method: :delete, confirm: "¿Estás seguro?" }, class: "btn btn-danger" %>
          <% end %>
        </div>
      </div>
    </div>
  <% end %>
</div>
