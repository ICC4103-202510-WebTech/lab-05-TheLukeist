<h1>Detalles del Chat</h1>

<div class="card mb-3">
  <div class="card-body">
    <h5 class="card-title">Chat #<%= @chat.id %></h5>
    <p class="card-text">
      <strong>Remitente:</strong> <%= @sender.first_name %> <%= @sender.last_name %><br>
      <strong>Receptor:</strong> <%= @receiver.first_name %> <%= @receiver.last_name %><br>
      <strong>Creado:</strong> <%= @chat.created_at %><br>
      <strong>Actualizado:</strong> <%= @chat.updated_at %>
    </p>
    <div class="mb-3">
      <%= link_to "Editar", edit_chat_path(@chat), class: "btn btn-warning" %>
      <%= link_to "Volver a Chats", chats_path, class: "btn btn-secondary" %>
    </div>
  </div>
</div>

<div class="card">
  <div class="card-header">
    <h5>Mensajes (<%= @messages.count %>)</h5>
  </div>
  <div class="card-body">
    <% if @messages.any? %>
      <table class="table table-striped">
        <thead>
          <tr>
            <th>ID</th>
            <th>Usuario</th>
            <th>Mensaje</th>
            <th>Creado</th>
            <th>Acciones</th>
          </tr>
        </thead>
        <tbody>
          <% @messages.each do |message| %>
            <tr>
              <td><%= message.id %></td>
              <td><%= message.user.first_name %></td>
              <td><%= message.body %></td>
              <td><%= message.created_at %></td>
              <td>
                <%= link_to "Ver", message_path(message), class: "btn btn-primary btn-sm" %>
                <%= link_to "Editar", edit_message_path(message), class: "btn btn-warning btn-sm" %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    <% else %>
      <p>No hay mensajes en este chat.</p>
    <% end %>
    <div class="mt-3">
      <%= link_to "Nuevo Mensaje", new_message_path(chat_id: @chat.id), class: "btn btn-success" %>
    </div>
  </div>
</div>
