<div class="container mt-5" style="max-width: 400px;">
  <div class="card shadow">
    <div class="card-body">
      <h2 class="card-title text-center mb-4">Recuperar contraseña</h2>
      <% if resource.errors.any? %>
        <div class="alert alert-danger">
          <ul class="mb-0">
            <% resource.errors.full_messages.each do |msg| %>
              <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
      <% end %>
      <%= form_for(resource, as: resource_name, url: password_path(resource_name)) do |f| %>
        <div class="mb-3">
          <%= f.label :email, 'Correo electrónico', class: "form-label" %>
          <%= f.email_field :email, autofocus: true, class: "form-control" %>
        </div>
        <div class="d-grid gap-2">
          <%= f.submit "Enviar instrucciones", class: "btn btn-primary" %>
        </div>
      <% end %>
      <div class="mt-3 text-center">
        <%= link_to "Iniciar sesión", new_session_path(resource_name), class: "link-secondary" %><br>
        <%= link_to "Registrarse", new_registration_path(resource_name), class: "link-secondary" %>
      </div>
    </div>
  </div>
</div> 