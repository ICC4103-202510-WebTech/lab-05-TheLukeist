<h1>Nuevo Mensaje</h1>

<%= form_with(model: @message) do |f| %>
  <% if @message.errors.any? %>
    <div class="alert alert-danger">
      <h2><%= pluralize(@message.errors.count, "error") %> impidieron guardar este mensaje:</h2>
      <ul>
        <% @message.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-3">
    <%= f.label :chat_id, "Chat", class: "form-label" %>
    <%= f.select :chat_id, @chats.map { |c| ["Chat ##{c.id} (#{c.sender.first_name} -> #{c.receiver.first_name})", c.id] }, {}, class: "form-select" %>
  </div>

  <div class="mb-3">
    <%= f.label :user_id, "Usuario", class: "form-label" %>
    <%= f.select :user_id, @users.map { |u| [u.first_name, u.id] }, {}, class: "form-select" %>
  </div>

  <div class="mb-3">
    <%= f.label :body, "Mensaje", class: "form-label" %>
    <%= f.text_area :body, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= f.submit "Crear Mensaje", class: "btn btn-primary" %>
    <%= link_to "Volver", messages_path, class: "btn btn-secondary" %>
  </div>
<% end %> 